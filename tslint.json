{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "server/templates/**",
            "server/static/**",
            "db/**"
        ]
    },
    "rules": {
        "only-arrow-functions": false,
        "space-before-function-paren": false,
        "no-console": false,
        "quotemark": [
            true,
            "double"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": false,
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": "always"
            }
        ]
    }
}
